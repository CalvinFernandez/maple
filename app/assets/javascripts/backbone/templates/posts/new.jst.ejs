<form accept-charset="UTF-8" action="/posts" class="new_post" enctype="multipart/form-data" id="new-post" method="post">
  <label for="title">Title</label>
  <input type="text" name="title" id="post-title" />

  <label for="content">Content</label>
  <input type="text" name="content" id="post-content" />

  <select id="company" name="company_id">
  <% for (var i = 0; i < companies.length; i++) { %>
    <option value="<%= companies[i].id %>"><%= companies[i].name %></option>
  <% } %>
  </select>

  <label for="image">Image</label>
  <input type="file" name="image" id="post-image" />

  <button id="post-submit">Submit</button>
</form>
